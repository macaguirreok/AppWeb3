extends ./index

block contenido
    .flex.justify-end.mb-4
        span
            a(href="/inscripciones/listarInscripciones" class="text-gray-600 hover:text-gray-800") Volver al listado

    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center= pagina

        form(action=`/inscripciones/${inscripcion.curso.id}/${inscripcion.estudiante.id}?_method=PUT` method="POST" class="max-w-lg mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4")
            div.mb-4
                label(for="estudiante" class="block text-gray-700 text-sm font-bold mb-2") Estudiante:
                input(type="text" id="estudiante" name="estudiante" value=`${inscripcion.estudiante.nombre} ${inscripcion.estudiante.apellido}` readonly class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline")

            div.mb-4
                label(for="curso" class="block text-gray-700 text-sm font-bold mb-2") Curso:
                input(type="text" id="curso" name="curso" value=inscripcion.curso.nombre readonly class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline")

            div.mb-4
                label(for="nota" class="block text-gray-700 text-sm font-bold mb-2") Nota:
                input(type="text" id="nota" name="nota" value=inscripcion.nota class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline")

            div.mb-4
                input(type="hidden" id="fecha" name="fecha" value=inscripcion.fecha class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline")

            button(type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline") Actualizar Inscripci√≥n
