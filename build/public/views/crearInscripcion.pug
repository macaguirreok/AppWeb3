extends ./index

block contenido
    .flex.justify-end.mb-4
        ul.flex.space-x-4
            span
                a(href="/inscripciones/listarInscripciones" class="text-gray-600 hover:text-gray-800") Volver al listado

    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center= pagina

        form(action="/inscripciones", method="POST" class="max-w-lg mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4")
            div.mb-4
                label(for="estudiante_id" class="block text-gray-700 text-sm font-bold mb-2") Estudiante:
                select(name="estudiante_id" id="estudiante_id" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline")
                    option(value="") Seleccione un Estudiante
                    each estudiante in estudiantes
                        option(value=estudiante.id) #{estudiante.nombre} #{estudiante.apellido}
            div.mb-4
                label(for="curso_id" class="block text-gray-700 text-sm font-bold mb-2") Curso:
                select(name="curso_id" id="curso_id" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline")
                    option(value="") Seleccione un Curso
                    each curso in cursos
                        option(value=curso.id) #{curso.nombre}
            div.mb-4
                label(for="nota" class="block text-gray-700 text-sm font-bold mb-2")
                input(type="hidden", id="nota", name="nota", value="0" disabled="disabled" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline")
            div.mb-4
                label(for="fecha" class="block text-gray-700 text-sm font-bold mb-2") Fecha de Inscripción:
                input(type="date", id="fecha" name="fecha" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline")

            button(type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline") Crear Inscripción
