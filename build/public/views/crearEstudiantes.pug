extends ./index

block contenido
    .flex.justify-end.mb-4
        ul.flex.space-x-4
            li
                a(href="/estudiantes/listarEstudiantes" class="text-gray-600 hover:text-gray-800") Ver Estudiantes

    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Proyecto
            span.font-normal Universidad
        h2.text-center.text-2xl.font-extrabold= pagina

        form(action="/estudiantes", method="POST" class="max-w-lg mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4")
            div.mb-4
                label(for="dni" class="block text-gray-700 text-sm font-bold mb-2") DNI:
                input(type="text", id="dni", name="dni", class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline")
            div.mb-4
                label(for="nombre" class="block text-gray-700 text-sm font-bold mb-2") Nombre:
                input(type="text", id="nombre", name="nombre", class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline")
            div.mb-4
                label(for="apellido" class="block text-gray-700 text-sm font-bold mb-2") Apellido:
                input(type="text", id="apellido", name="apellido", class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline")
            div.mb-4
                label(for="email" class="block text-gray-700 text-sm font-bold mb-2") Email:
                input( id="email", name="email", class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline")
            button(type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline") Crear Estudiante

